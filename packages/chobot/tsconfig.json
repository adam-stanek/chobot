{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "importHelpers": true,
    "esModuleInterop": true,
    "paths": {
      "chobot": ["src"],
      "chobot/*": ["src/*"]
    },
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
