{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "importHelpers": true,
    "esModuleInterop": true,
    "paths": {
      "~": [
        "src"
      ],
      "~/*": [
        "src/*"
      ],
      "~t/*": [
        "test/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}