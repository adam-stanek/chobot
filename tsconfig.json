{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "importHelpers": true,
    "esModuleInterop": true,
    "paths": {
      "~": [
        "src"
      ],
      "~/*": [
        "src/*"
      ]
    },
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}